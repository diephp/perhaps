    "keywords": [
      "catch",
      "retry"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anatoly Astapov",
            "email": "anatoly.astapov@gmail.com"
        }
    ],
    "require": {
